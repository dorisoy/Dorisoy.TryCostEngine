@using FluentValidation
@using CostEngine.Data.Models
@using GEnum = CostEngine.Data.Constants.TPDataConstant
@using MudBlazor
@using System.ComponentModel.DataAnnotations
@using CostEngine.Data.Constants
<style>
    .mud-all-table-header-row {
        background-color: var(--mud-palette-table-hover);
    }
</style>

@*随量给钱*@

<div class="mud-table mud-table-dense mud-table-hover mud-elevation-1">
    <div class="mud-table-container">
        <table class="mud-table-root">
            <tr class="mud-table-row mud-all-table-header-row">
                <th scope="col" class="mud-table-cell" style="text-align:center;width:150px">
                    @(ParameterModel.Model.fydlzhTR.IsHaveRate ? "单组总标准(元)" : "单件总标准(元)")
                </th>
            </tr>
            <tr class="mud-table-row">
                @*单组总标准(元)*@
                <td class="mud-table-cell pa-2 gap-2">
                    <MudTextField @bind-Value="PData.FixFee"
                                  Variant="Variant.Outlined"
                                  Margin="Margin.Dense" />
                </td>
            </tr>
        </table>
    </div>
</div>


@code
{
    [Parameter]
    public ProtocolBaseDetail PData { get; set; }

    [CascadingParameter(Name = "ParameterModel")]
    public ParameterModel ParameterModel { get; set; }

    protected override void OnInitialized()
    {
        base.OnInitialized();
    }
}